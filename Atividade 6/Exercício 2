'''2 - Crie um programa que  acesse a API  para buscar um usuário fictício aleatório. exibindo o nome, e-mail e país desse usuário, caso houver erro na conexão, mostre uma mensagem de falha.'''

# Consultando a API Random User
import requests
def consulta_usuario() -> dict:
    url = "https://randomuser.me/api/"
    resposta = requests.get(url, timeout=5)
    resposta.raise_for_status()
    return resposta.json()
try:
    dados_usuario = consulta_usuario()
    usuario = dados_usuario['results'][0]
    nome = f"{usuario['name']['first']} {usuario['name']['last']}"
    email = usuario['email']
    pais = usuario['location']['country']
    print(f"Nome: {nome}")
    print(f"E-mail: {email}")
    print(f"País: {pais}")
except requests.exceptions.RequestException:
    print("Erro na conexão. Tente novamente mais tarde.")
